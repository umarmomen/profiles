      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
  
    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

  <div class="field">
    <%= form.label :secret_key %>
    <%= form.password_field :secret_key %>
  </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  

